            max-width: 80%;
            height: auto;
            margin: 20px 0;
            border: 5px solid #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 10px 0;
            text-align: center;
            font-size: 0.9rem;
        }

        footer a {
            color: #f0db4f;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
